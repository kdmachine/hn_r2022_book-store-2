<div class="container">
  <div class="row">
    <div class="container-fluid">
      <h3 class="mt-4"><%= t "cart" %></h3>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered m-0">
          <thead class="bg-dark text-center text-white">
            <tr>
              <th class="py-3 px-2 col-6"><%= t "product" %></th>
              <th class="py-3 px-2 col-2"><%= t "cost" %></th>
              <th class="py-3 px-2 col-2"><%= t "quantity" %></th>
              <th class="py-3 px-2 col-2"><%= t "total" %></th>
              <th class="align-middle py-3 px-0"></th>
            </tr>
          </thead>

          <tbody class="text-center">
            <% if @cart %>
              <% @cart.each do |item| %>
                <%= render partial: "carts/cart", locals: {cart: item} %>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="d-flex flex-wrap justify-content-between align-items-center pb-4">
        <div class="d-flex">
          <div class="text-left mt-4">
            <label class="text font-weight-bold m-0"><%= t "total" %></label>
            <div class="text-large"><h3>
              <% if @cart %>
                <%= price_format(total_price()) %>
              <% end %>
            </h3></div>
          </div>
        </div>
        <div class="float-right">
          <% if logged_in? %>
            <button type="button" class="btn btn-lg btn-default md-btn-flat mt-2 mr-3">
              <%= link_to t("back"), books_path, class:"text-decoration-none" %>
            </button>
            <button type="button" class="btn btn-lg btn-primary mt-2">
              <%= link_to t("go_checkout"), checkout_path, class: "text-white text-decoration-none" %>
            </button>
          <% else %>
            <h5 class="mt-2">
              <%= t "please_login" %>
              <%= link_to t("login"), login_path, class: "text-decoration-none" %>
            </h5>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
