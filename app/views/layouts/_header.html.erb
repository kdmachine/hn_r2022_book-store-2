<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
  <% if logged_by_admin? %>
    <!-- Admin header -->
    <%= link_to t("home_admin"), admin_homes_path, class: "active, navbar-brand" %>
    <%= link_to t("category"), admin_categories_path, class: "nav-link" %>
    <%= link_to t("book"), admin_books_path, class: "nav-link" %>
    <%= link_to t("order"), admin_orders_path, class: "nav-link" %>
    <%= link_to t("account"), admin_accounts_path, class: "nav-link" %>
    <%= link_to t("publisher"), admin_homes_path, class: "nav-link" %>
    <%= link_to t("author"), admin_homes_path, class: "nav-link" %>
  <% else %>
    <!-- User header-->
    <%= link_to t("home"), store_home_path, class: "active, navbar-brand" %>
    <div class="nav-item dropdown nav-link">
      <a class="dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"><%= t("all_category") %></a>
      <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
        <% load_category.each do |category| %>
          <li><%= link_to category.name, root_path, class: "dropdown-item" %></li>
        <% end %>
      </ul>
    </div>
    <%= link_to t("all_book"), books_path, class: "nav-link" %>
    <%= link_to t("my_order"), order_path, class: "nav-link" %>
    <%= link_to t("cart"), cart_path, class: "nav-link" %>
    <%= link_to t("contact"), root_path, class: "nav-link" %>
  <% end %>

  <!-- Navbar Search-->
  <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
    <div class="input-group">
      <input class="form-control" type="text" placeholder="<%= t "search_for" %>" aria-label="Search for..." aria-describedby="btnNavbarSearch" />
      <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
    </div>
  </form>

  <ul class="d-none d-md-inline-block form-inline ms-auto ms-md-0 me-3 my-2 me-lg-4">
    <%= link_to "en", locale: :en %> 
    <%= link_to "vi", locale: :vi %>
  </ul>
  <!-- Navbar-->
  <% if logged_in? %>
    <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <li><%= link_to t("profile"), current_user, class: "dropdown-item" %></li>
          <li><hr class="dropdown-divider" /></li>
          <li><%= button_to t("logout"), logout_path, method: :delete, class: "dropdown-item" %></li>
        </ul>
      </li>
    </ul>
  <% else %>
    <%= link_to t("login"), login_path, class: "nav-link" %>
    <%= link_to t("signup"), signup_path, class: "nav-link" %>
  <% end %>
</nav>
